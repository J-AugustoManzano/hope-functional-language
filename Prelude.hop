range (i, f, p) <= if i > f 
                   then [] 
                   else i :: range (i + p, f, p);

reduce : list alpha # (alpha # alpha -> alpha) # alpha -> alpha;
reduce ([], f, n)      <= n;
reduce (x :: xs, f, n) <= f (x, reduce (xs, f, n));

repeat : num # alpha -> list alpha;
repeat (n, a) <= if n = 0 
                 then []
                 else a :: repeat (n - 1, a);


